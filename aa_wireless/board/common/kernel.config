# Real-Time Performance Configuration
# Enable full preemption and reduce timer interrupts for low-latency operation.
CONFIG_PREEMPT_RT=y           # Enable full real-time preemption
CONFIG_NO_HZ_FULL=y           # Reduce timer interrupts for better latency

# USB Gadget Configuration
# Configure USB gadget functionality and reduce unnecessary USB overhead.
CONFIG_USB_CONFIGFS_UEVENT=y  # Enable UEVENT for USB gadget
CONFIG_USB_CONFIGFS_F_ACC=y   # Add f_accessory function for USB gadget

# CPU Frequency Scaling
# Use performance governor during boot for faster startup, then allow runtime switching.
CONFIG_CPU_FREQ=y                         # Enable CPU frequency scaling
CONFIG_CPU_FREQ_DEFAULT_GOV_PERFORMANCE=y # Set "performance" as the default governor for fast boot
CONFIG_CPU_FREQ_DEFAULT_GOV_ONDEMAND=n    # Disable ondemand as default (can still be enabled)
CONFIG_CPU_FREQ_DEFAULT_GOV_POWERSAVE=n   # Ensure powersave is disabled
CONFIG_CPU_FREQ_GOV_ONDEMAND=y            # Enable the "ondemand" governor (available for runtime)
CONFIG_CPU_FREQ_GOV_PERFORMANCE=y         # Enable the "performance" governor

# Filesystem Configuration
# Disable unused filesystems to reduce kernel size and improve boot performance.
CONFIG_NFS_FS=n               # Disable Network File System (NFS) support
CONFIG_SMB_FS=n               # Disable SMB (Server Message Block) support
CONFIG_CIFS=n                 # Disable Common Internet File System (CIFS) support
CONFIG_FUSE_FS=n              # Disable FUSE (Filesystem in Userspace) support
CONFIG_NTFS_FS=n              # Disable NTFS filesystem support
CONFIG_NTFS3_FS=n             # Disable NTFS3 filesystem support
CONFIG_BTRFS_FS=n             # Disable BTRFS filesystem support
CONFIG_XFS_FS=n               # Disable XFS filesystem support
CONFIG_REISERFS_FS=n          # Disable ReiserFS filesystem support
CONFIG_JFS_FS=n               # Disable JFS filesystem support
CONFIG_PARIDE=n               # Disable Parallel IDE devices
CONFIG_PATA=n                 # Disable legacy PATA storage devices

# F2FS Compression Configuration (if using F2FS)
# Enable compression for better storage efficiency with minimal performance impact.
CONFIG_F2FS_FS_COMPRESSION=y  # Enable F2FS compression
CONFIG_F2FS_FS_LZO=y          # Enable LZO compression for F2FS
CONFIG_F2FS_FS_LZORLE=y       # Enable LZO-RLE compression for F2FS
CONFIG_F2FS_FS_LZ4=y          # Enable LZ4 compression for F2FS (fast)
CONFIG_LZ4_COMPRESS=y         # Enable LZ4 compression support
CONFIG_LZ4HC_COMPRESS=y       # Enable LZ4HC compression support
CONFIG_F2FS_FS_LZ4HC=y        # Enable LZ4HC compression for F2FS
CONFIG_F2FS_FS_ZSTD=n         # Disable ZSTD compression (higher CPU overhead)

# Boot-time Decompression Configuration
# Disable decompression to reduce CPU overhead during boot.
CONFIG_DECOMPRESS_GZIP=n      # Disable GZIP decompression
CONFIG_DECOMPRESS_BZIP2=n     # Disable BZIP2 decompression
CONFIG_DECOMPRESS_LZMA=n      # Disable LZMA decompression
CONFIG_DECOMPRESS_LZO=n       # Disable LZO decompression
CONFIG_DECOMPRESS_ZSTD=n      # Disable ZSTD decompression
CONFIG_RD_GZIP=n              # Disable GZIP initrd support
CONFIG_RD_BZIP2=n             # Disable BZIP2 initrd support
CONFIG_RD_LZMA=n              # Disable LZMA initrd support
CONFIG_RD_LZO=n               # Disable LZO initrd support
CONFIG_RD_ZSTD=n              # Disable ZSTD initrd support

# Audio Configuration
# Disable ALSA sound system to save power and reduce kernel size.
CONFIG_SND=n                  # Disable ALSA sound system
CONFIG_SOUND=n                # Disable generic sound system

# Bluetooth Configuration
# Optimize Bluetooth by disabling unused features.
CONFIG_BT_BNEP=n              # Disable Bluetooth Network Encapsulation Protocol (BNEP)

# Networking Configuration
# Disable legacy networking options and optimize for required protocols.
CONFIG_NET_SCH_HTB=n          # Disable Hierarchical Token Bucket queuing
CONFIG_NET_SCH_TBF=n          # Disable Token Bucket Filter queuing
CONFIG_INET=y                 # Enable IPv4 protocol support
CONFIG_IPV6=n                 # Disable IPv6 protocol support to save resources

# Media and Video Device Configuration
# Disable unused media subsystems to reduce kernel size.
CONFIG_DVB_CORE=n             # Disable Digital Video Broadcasting core
CONFIG_DVB_NET=n              # Disable DVB network support
CONFIG_MEDIA_ANALOG_TV_SUPPORT=n    # Disable analog TV support
CONFIG_MEDIA_DIGITAL_TV_SUPPORT=n   # Disable digital TV support
CONFIG_MEDIA_RADIO_SUPPORT=n        # Disable radio support
CONFIG_MEDIA_SDR_SUPPORT=n          # Disable Software Defined Radio support
CONFIG_MEDIA_CAMERA_SUPPORT=n       # Disable camera support
CONFIG_VIDEO_CAMERA_SENSOR=n        # Disable camera sensor support
CONFIG_MEDIA_USB_SUPPORT=n          # Disable USB media device support
CONFIG_MEDIA_CONTROLLER_DVB=n       # Disable DVB media controller
CONFIG_RADIO_ADAPTERS=n             # Disable radio adapters

# Input Device Configuration
# Disable input devices not needed for headless operation.
CONFIG_INPUT_MOUSEDEV=n       # Disable mouse device support
CONFIG_INPUT_JOYDEV=n         # Disable joystick device support
CONFIG_INPUT_JOYSTICK=n       # Disable joystick support
CONFIG_INPUT_TABLET=n         # Disable tablet support
CONFIG_INPUT_TOUCHSCREEN=n    # Disable touchscreen support

# Storage Interface Configuration
# Disable legacy storage interfaces not present on Pi Zero 2W.
CONFIG_ATA=n                  # Disable ATA support
CONFIG_SCSI_MOD=n            # Disable SCSI subsystem
CONFIG_CDROM=n               # Disable CD-ROM support
CONFIG_MD=n                  # Disable software RAID support

# Real-Time Clock Configuration
# Disable RTC if not needed for headless operation.
CONFIG_RTC_CLASS=n            # Disable Real-Time Clock support

# Ham Radio Configuration
# Disable amateur radio protocols not needed for Android Auto.
CONFIG_HAMRADIO=n             # Disable amateur radio support
CONFIG_AX25=n                 # Disable AX.25 protocol
CONFIG_NETROM=n               # Disable NET/ROM protocol
CONFIG_ROSE=n                 # Disable ROSE protocol

# USB HID Configuration
# Disable HID devices not needed for headless operation.
CONFIG_USB_HID=n              # Disable USB Human Interface Device support
CONFIG_HID_PID=n              # Disable HID PID support

# Wireless Configuration
# Disable unused wireless protocols.
CONFIG_WIRELESS_EXT=n         # Disable wireless extensions
CONFIG_WEXT_SPY=n             # Disable wireless spy extensions
CONFIG_WEXT_PRIV=n            # Disable wireless private extensions

# Kernel Debugging and Tracing
# Disable debugging and tracing features to improve boot speed and reduce kernel size.
CONFIG_DEBUG_BUGVERBOSE=n     # Disable verbose bug reporting
CONFIG_DEBUG_FS=n             # Disable debug filesystem
CONFIG_KGDB=n                 # Disable kernel debugger
CONFIG_DEBUG_MEMORY_INIT=n    # Disable memory initialization debugging
CONFIG_FTRACE=n               # Disable function tracer
CONFIG_SLUB_DEBUG=n           # Disable SLUB allocator debugging
CONFIG_EVENT_TRACING=n        # Disable event tracing
CONFIG_KPROBES=n              # Disable kernel probes
CONFIG_UPROBES=n              # Disable userspace probes
CONFIG_SCHED_DEBUG=n          # Disable scheduler debugging

# Minimal Console Output
# Reduce boot time by disabling verbose kernel output.
CONFIG_PRINTK=n               # Disable kernel printk output

# Logo and Framebuffer Configuration
# Disable boot logo to speed up boot process.
CONFIG_LOGO=n                 # Disable boot logo
CONFIG_LOGO_LINUX_CLUT224=n   # Disable Linux logo
